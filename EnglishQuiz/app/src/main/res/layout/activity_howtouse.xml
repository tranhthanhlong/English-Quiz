<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="130dp">

        <TextView
            android:id="@+id/txtMultipleChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textStyle="bold"
            android:text="MULTIPLE CHOICES: " />

        <TextView
            android:id="@+id/txtMultipleChoice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/txtMultipleChoice"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="1. Press Multiple Choice" />

        <TextView
            android:id="@+id/txtMultipleChoice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/txtMultipleChoice1"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="2. Select amount of questions" />

        <TextView
            android:id="@+id/txtMultipleChoice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/txtMultipleChoice2"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="3. Select 1 answer from given choices" />

        <TextView
            android:id="@+id/txtMultipleChoice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="60dp"
            android:layout_below="@id/txtMultipleChoice4"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="3.1 Got 1 point if answer correct" />

        <TextView
            android:id="@+id/txtMultipleChoice5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="60dp"
            android:layout_below="@id/txtMultipleChoice4"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="3.2 No point if time out or wrong answer" />

        <TextView
            android:id="@+id/txtCorrectWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textStyle="bold"
            android:text="CORRECT WORD: " />

        <TextView
            android:id="@+id/txtCorrectWord1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/txtCorrectWord"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="1. Press Correct Word" />

        <TextView
            android:id="@+id/txtCorrectWord2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/txtCorrectWord1"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="2. Write correct word from scramble word" />

        <TextView
            android:id="@+id/txtCorrectWord3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="60dp"
            android:layout_below="@id/txtCorrectWord2"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="2.1 Next word if out of time" />

        <TextView
            android:id="@+id/txtCorrectWord4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="60dp"
            android:layout_below="@id/txtCorrectWord4"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="2.2 Difficulty increase based on correct-streak \n\t\t\t\t(reset if failed)" />

        <TextView
            android:id="@+id/txtCorrectWord5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="60dp"
            android:layout_below="@id/txtCorrectWord4"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="2.3 Get 1 star if on 3-correct-streak (alternative)" />

        <TextView
            android:id="@+id/txtCorrectWord6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="60dp"
            android:layout_below="@id/txtCorrectWord5"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="2.4 Game Over if on 3-incorrect-streak with no star" />

    </LinearLayout>
    <ImageView
        android:id="@+id/icwave3"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:rotation="180"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_wave3" />
</androidx.constraintlayout.widget.ConstraintLayout>